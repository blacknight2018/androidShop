<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item android:drawable="@drawable/arrow_down" android:width="20dp" android:height="26dp"></item>
        </layer-list>
    </item>
    <item android:state_checked="false">
        <layer-list>
            <item android:drawable="@drawable/arrow_up"  android:width="20dp" android:height="26dp"></item>
        </layer-list>
    </item>
</selector>