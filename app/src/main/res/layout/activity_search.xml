            <!--            <com.example.fuck2.ui.SearchGoodsView-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content" />-->


        </LinearLayout>
    </com.example.fuck2.ui.ScrollBottomScrollView>


</com.google.android.flexbox.FlexboxLayout>